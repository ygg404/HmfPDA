<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/in_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/fg_in_channel"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="@string/inmenu"
            android:textColor="@drawable/fg_text_channel"
            android:background="@drawable/textview_border"
            android:textSize="18sp"
            />
        <LinearLayout
            android:id="@+id/in_btn_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/textview_border"
            >
            <Button
                android:id="@+id/godownmScanBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/btnshape"
                android:textColor="@color/colorWhite"
                android:text="@string/scan"/>
            <Button
                android:id="@+id/godownmQueryBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/btnshape"
                android:textColor="@color/colorWhite"
                android:text="@string/query"/>
        </LinearLayout>

        <TextView
            android:id="@+id/order_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/fg_order_channel"
            android:gravity="center"
            android:paddingTop="8dp"
            android:background="@drawable/textview_border"
            android:text="@string/ordermenu"
            android:textColor="@drawable/fg_text_channel"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/order_btn_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/textview_border">
            <Button
                android:id="@+id/orderScanBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/btnshape"
                android:textColor="@color/colorWhite"
                android:text="@string/scan"/>
            <Button
                android:id="@+id/orderQueryBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/btnshape"
                android:textColor="@color/colorWhite"
                android:text="@string/query"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/return_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/textview_border"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/fg_return_channel"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="@string/returnmenu"
            android:textColor="@drawable/fg_text_channel"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/return_btn_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/returnScanBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btnshape"
                android:gravity="center"
                android:text="@string/scan"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/returnQueryBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnshape"
                android:gravity="center"
                android:text="@string/query"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"></LinearLayout>


    </LinearLayout>

</LinearLayout>